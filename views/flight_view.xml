<odoo>
    <record id="view_flight_schedule_tree" model="ir.ui.view">
        <field name="name">flight.schedule.list</field>
        <field name="model">flight.schedule</field>
        <field name="arch" type="xml">
            <list>
                <field name="flight_number"/>
                <field name="airline_name"/>
                <field name="origin"/>
                <field name="destination"/>
                <field name="departure_time"/>
                <field name="arrival_time"/>
                <field name="price" widget="monetary"/>
                <field name="status" widget="badge" decoration-success="status == 'active'" decoration-danger="status == 'cancelled'"/>
                <field name="user_id" string="Created By" widget="many2one_avatar_user"/>
                <field name="is_from_api" string="From Api" />
            </list>
        </field>
    </record>

    <record id="view_flight_schedule_form" model="ir.ui.view">
        <field name="name">flight.schedule.form</field>
        <field name="model">flight.schedule</field>
        <field name="arch" type="xml">
            <form string="Flight">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="flight_number" placeholder="Flight Number"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Flight Info">
                            <field name="airline_name"/>
                            <field name="origin"/>
                            <field name="destination"/>
                            <field name="status"/>
                        </group>
                        <group string="Schedule &amp; Price">
                            <field name="departure_time"/>
                            <field name="arrival_time"/>
                            <field name="price" widget="monetary"/>
                        </group>
                    </group>
                    <group>
                        <group string="Owner Info">
                            <field name="user_id" string="Created By"/>
                            <field name="partner_id" string="Customer" readonly="1"/>
                        </group>
                        <group string="Source Info">
                            <field name="is_from_api" string="Fetched from API" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_flight_schedule" model="ir.actions.act_window">
        <field name="name">Flights</field>
        <field name="res_model">flight.schedule</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click "Create" to fetch flights from API.
            </p>
        </field>
    </record>

    <menuitem id="menu_flight_root" name="Flights" action="action_flight_schedule"/>

</odoo>
